apt-get install samba
# install wine 
apt-get install winehq-stable -y
# download radiant:
wget https://www.radiantviewer.com/files/RadiAnt-2020.1.1-Setup.exe
# remmina installation
apt-get install remmina remmina-plugin-rdp -y
# add rdp connection file
cd /home/user/.local/share/remmina
touch default.remmina
# insert to /home/user/.local/share/remmina/default.remmina

# install anydesk
wget -qO - https://keys.anydesk.com/repos/DEB-GPG-KEY | apt-key add -
echo "deb http://deb.anydesk.com/ all main" > /etc/apt/sources.list.d/anydesk-stable.list
apt update
apt install anydesk -y
# install chrom
apt-get install chromium-browser -y
